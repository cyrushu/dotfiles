set number
set formatoptions-=cro
set clipboard=unnamed
set history =50
set ruler
set incsearch
set showcmd
set hls
set nobackup
set autoindent
set smartindent
syntax on

" set typing rules
set softtabstop=4

" set temp dir into /.vimtmp
set bdir-=.
set bdir+=~/.vimtmp

" set undofile and undodir

set undofile
set undodir-=.
set undodir+=~/.vimundo
